<%= render 'header' %>
<div class="container">
    <div class="row">
        <%= form_for(@tweet) do |f| %>
            <%= f.hidden_field :content %>
            <div class="panel panel-primary">
                <div class="panel panel-heading">
                    <h2>以下の内容でつぶやきますか？</h2>
                </div>
                <div class="panel panel-body">
                    <h3>ツイート内容：<%= @tweet.content %></h3>
                </div>
                <div class="panel panel-footer">
                    <%= f.submit "登録する", :class => 'btn btn-lg btn-success btn-block' %>
                </div>
            </div>
        <% end %>
        <%= form_for(@tweet, url: new_tweet_path, method: 'get') do |f| %>
            <%= f.hidden_field :content %>
            <%= f.submit "戻る", name: 'back', :class => 'btn btn-primary btn-lg btn-block' %>
        <% end %>
    </div>
</div>
